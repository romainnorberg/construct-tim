{% extends 'AppBundle::base_project.html.twig' %}

{% block content %}
  <section class="carousel slide" id="ZCarousel">
    <div class="carousel-inner">
      <div class="item active">
        <div class="fill" style="background-image:url('{{ upload.image_path ~ project_type.imageName }}');"></div>
      </div>
    </div>
  </section>

  <section class="content html">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 col-lg-offset-1">
          <div class="title_container">
            <div class="main-title">
              <h1>
                <span><strong>{{ project_type.title }}</strong></span>
              </h1>
            </div>
          </div>

          <hr>

          <div class="content">
            {{ include(template_from_string(project_type.content|rawdescr)) }}
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}